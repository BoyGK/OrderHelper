<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="217dp"
    android:layout_gravity="center">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dialog_goods"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="@string/goodsName"
        android:textColor="@color/black"
        android:textSize="@dimen/itemNameSp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.3" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/dialog_goods_name"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@null"
        android:inputType="text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.7" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/gray"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_goods_name"
        app:layout_constraintWidth_percent="0.7" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dialog_priceIn"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="@string/priceIn"
        android:textColor="@color/black"
        android:textSize="@dimen/itemNameSp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_goods"
        app:layout_constraintWidth_percent="0.3" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/dialog_goods_priceIn"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@null"
        android:inputType="numberDecimal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_goods_name"
        app:layout_constraintWidth_percent="0.7" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/gray"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_goods_priceIn"
        app:layout_constraintWidth_percent="0.7" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dialog_priceOut"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="@string/priceOut"
        android:textColor="@color/black"
        android:textSize="@dimen/itemNameSp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_priceIn"
        app:layout_constraintWidth_percent="0.3" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/dialog_goods_priceOut"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@null"
        android:inputType="numberDecimal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_goods_priceIn"
        app:layout_constraintWidth_percent="0.7" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/gray"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_goods_priceOut"
        app:layout_constraintWidth_percent="0.7" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dialog_ok"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="@dimen/margin16"
        android:background="@drawable/background_click"
        android:text="@string/ok"
        android:textColor="@color/blue"
        android:textSize="@dimen/titleSp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_goods_priceOut" />

</androidx.constraintlayout.widget.ConstraintLayout>